---
import Layout from "../layouts/Layout.astro";
const allPosts = await Astro.glob("../pages/posts/*.md");
const pageTitle = "Notes on Drainage";
---

<Layout title={pageTitle}>
    <main class="text-slate-200 m-auto p-6 max-w-3xl">
        <h1 class="text-4xl text-center">
            Notes on <span class="text-purple-700">Drainage</span>
        </h1>
        <p class="text-center p-8">Give me the blood, Eli.</p>
        <ul role="list" class="grid grid-cols-2 gap-8">
            <ul>
                {
                    allPosts.map((post) => (
                        <li>
                            <a href={post.url}>{post.frontmatter.title}</a>
                        </li>
                    ))
                }
            </ul>
        </ul>
    </main>
</Layout>
