---
import Card from "./Card.astro";
const { posts } = Astro.props;
---

<ul class="grid max-sm:grid-cols-1 grid-cols-2 gap-8">
    {
        posts.map((post: any) => (
            <Card
                url={post.url}
                title={post.frontmatter.title}
                description={post.frontmatter.description}
            />
        ))
    }
</ul>
